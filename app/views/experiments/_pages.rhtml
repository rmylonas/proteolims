<div id="pages_nav">
<center>
Pages:

<% (1..(Experiment.count.to_i/20.0).ceil.to_i).to_a.each do |i| %>
  <% if params[:page] and params[:page].to_i == i -%>
    <span class="current-page">
      <a href="/experiments?page=<%= i -%>"><%= i -%></a>
    </span>&nbsp;
  <% else -%>
    <span class="pages">
      <a href="/experiments?page=<%= i -%>"><%= i -%></a>
    </span>&nbsp;
  <% end %>
<% end %>
</center>

</div>

