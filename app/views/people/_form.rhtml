<%= error_messages_for 'person' %>

<table border="0" class="table-with-border" align="center">
<tr><th>First Name:</th><td><%= f.text_field( "first_name") %></tr>
<tr><th>Last Name:</th><td><%= f.text_field( "last_name" ) %></tr>
<tr><th>Address:</th><td><%= f.text_area( "address", { "rows" => 4 }) %></tr>
<tr><th>Email:</th><td><%= f.text_field( "email") %></tr>
<tr><th>Phone:</th><td><%= f.text_field( "phone") %></tr>
<tr><th>Fax:</th><td><%= f.text_field( "fax") %></tr>
</table>

